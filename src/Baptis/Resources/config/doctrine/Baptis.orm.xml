<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Paroki\Baptis\Entity\Baptis">
    <id name="id" type="guid">
      <generator strategy="UUID"/>
    </id>
    <field name="baptisId" type="string" unique="true" length="50" nullable="false"/>
    <field name="buku" type="string" length="50" nullable="false"/>
    <field name="halaman" type="integer" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="nomor" type="integer" nullable="false"/>
    <field name="tempatBaptis" type="string" length="255" nullable="true"/>
    <field name="tanggalBaptis" type="date" nullable="true"/>
    <field name="waliBaptis1" type="string" nullable="true"/>
    <field name="waliBaptis2" type="string" nullable="true"/>
    <field name="catatan" type="text" nullable="true"/>
    <field name="updatedAt" type="date" nullable="false"/>
    <many-to-one field="updatedBy" target-entity="Paroki\User\Entity\User">
      <join-columns>
        <join-column name="updated_by_user_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="paroki" target-entity="Paroki\Reference\Entity\Paroki">
      <join-columns>
        <join-column name="paroki_id" referenced-column-name="ParokiID"/>
      </join-columns>
    </many-to-one>
    <one-to-one field="komuni" target-entity="Paroki\Baptis\Entity\BaptisKomuni" inversed-by="baptis">
      <join-columns>
        <join-column name="baptis_komuni_id" referenced-column-name="id" nullable="false" unique="true" on-delete="CASCADE" on-update="CASCADE"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="krisma" target-entity="Paroki\Baptis\Entity\BaptisKrisma" inversed-by="baptis">
      <join-columns>
        <join-column name="baptis_krisma_id" referenced-column-name="id" nullable="false" unique="true" on-delete="CASCADE" on-update="CASCADE"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="perkawinan" target-entity="Paroki\Baptis\Entity\BaptisPerkawinan" inversed-by="baptis">
      <join-columns>
        <join-column name="baptis_perkawinan_id" referenced-column-name="id" nullable="false" unique="true" on-delete="CASCADE" on-update="CASCADE"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="diterima" target-entity="Paroki\Baptis\Entity\Diterima" inversed-by="baptis">
      <join-columns>
        <join-column name="diterima_id" referenced-column-name="id" nullable="false" unique="true"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="lingkungan" target-entity="Paroki\Reference\Entity\Lingkungan">
      <join-columns>
        <join-column name="lingkungan_id" referenced-column-name="KodeWLID"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
