<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SIAP\Baptis\Entity\BaptisKrisma" table="td_baptis_krisma">
    <id name="id" type="guid">
      <generator strategy="CUSTOM"/>
      <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
    </id>
    <field name="register" type="string" length="100" nullable="true"/>
    <field name="nama" type="string" nullable="true"/>
    <field name="tempat" type="string" nullable="true"/>
    <field name="tanggal" type="date" nullable="true"/>
    <field name="pemberi" type="string" nullable="true"/>
    <field name="catatan" type="text" nullable="true"/>
    <field name="updatedAt" type="date" nullable="true"/>
    <many-to-one field="paroki" target-entity="SIAP\Reference\Entity\Paroki">
      <join-columns>
        <join-column name="paroki_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="updatedBy" target-entity="SIAP\User\Entity\User" fetch="EAGER">
      <join-columns>
        <join-column name="updated_by_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="media" target-entity="SIAP\Core\Entity\MediaObject">
      <join-table name="td_baptis_krisma_media">
        <join-columns>
          <join-column name="baptis_krisma_id" referenced-column-name="id" nullable="false"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="dokumen_id" referenced-column-name="id" nullable="false"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
